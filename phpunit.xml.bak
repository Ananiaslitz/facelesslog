<phpunit colors="true"
         verbose="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="FacelessLog Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="testdox-html" target="phpunit-report.html" />
    </logging>
</phpunit>
